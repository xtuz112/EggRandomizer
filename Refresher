-- Creating the Screen GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Creating the Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.3, 0, 0.5, 0)
mainFrame.Position = UDim2.new(0.35, 0, 0.25, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 255, 255)
mainFrame.Parent = screenGui

-- Creating the Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.1, 0)
title.Text = "Pet Randomizer âœ¨"
title.BackgroundColor3 = Color3.fromRGB(0, 153, 204)
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = mainFrame

-- Create a function to add buttons
local function createButton(text, position, parent, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0.8, 0, 0.1, 0)
    button.Position = position
    button.Text = text
    button.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    button.TextColor3 = Color3.fromRGB(0, 0, 0)
    button.Parent = parent
    
    button.MouseButton1Click:Connect(callback)
end

-- Create buttons
createButton("Randomize Pets", UDim2.new(0.1, 0, 0.15, 0), mainFrame, function()
    print("Pets Randomized!") -- Replace with your randomization logic
end)

createButton("ESP: ON", UDim2.new(0.1, 0, 0.25, 0), mainFrame, function()
    print("ESP toggled!") -- Replace with your ESP logic
end)

createButton("Auto Randomize: OFF", UDim2.new(0.1, 0, 0.35, 0), mainFrame, function()
    print("Auto Randomization toggled!") -- Replace with your logic
end)

createButton("Load Pet Age 50 Script", UDim2.new(0.1, 0, 0.45, 0), mainFrame, function()
    print("Loaded Pet Age 50 Script!") -- Replace with your loading logic
end)

createButton("NEW: Pet Mutation Finder", UDim2.new(0.1, 0, 0.55, 0), mainFrame, function()
    print("Pet Mutation Finder activated!") -- Replace with your logic
end)
